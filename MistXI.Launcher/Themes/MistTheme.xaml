<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <SolidColorBrush x:Key="Mist.Background" Color="#0B1416"/>
  <SolidColorBrush x:Key="Mist.TopBar" Color="#1A2428"/>
  <SolidColorBrush x:Key="Mist.Panel" Color="#1A2428"/>
  <SolidColorBrush x:Key="Mist.Panel2" Color="#252F33"/>
  <SolidColorBrush x:Key="Mist.Border" Color="#3A4448"/>
  <SolidColorBrush x:Key="Mist.Text" Color="#E6F2F1"/>
  <SolidColorBrush x:Key="Mist.TextDim" Color="#A8B8B6"/>
  <SolidColorBrush x:Key="Mist.Gold" Color="#FFD700"/>
  <SolidColorBrush x:Key="Mist.Teal" Color="#6FE3D6"/>
  <SolidColorBrush x:Key="Mist.Accent" Color="#1FA9A4"/>
  <SolidColorBrush x:Key="Mist.AccentDim" Color="#0F7A75"/>

  <Style TargetType="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource Mist.Text}"/>
    <Setter Property="FontFamily" Value="Segoe UI"/>
  </Style>

  <Style x:Key="Mist.H1" TargetType="TextBlock">
    <Setter Property="FontSize" Value="34"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
  </Style>

  <Style x:Key="Mist.H2" TargetType="TextBlock">
    <Setter Property="FontSize" Value="18"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
  </Style>

  <Style x:Key="Mist.Caption" TargetType="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource Mist.TextDim}"/>
    <Setter Property="FontSize" Value="12"/>
  </Style>

  
<!-- Navigation pill (website-like) -->
<Style x:Key="Mist.NavPill" TargetType="ToggleButton">
  <Setter Property="Foreground" Value="{StaticResource Mist.Text}"/>
  <Setter Property="Background" Value="Transparent"/>
  <Setter Property="BorderBrush" Value="{StaticResource Mist.Border}"/>
  <Setter Property="BorderThickness" Value="1"/>
  <Setter Property="Padding" Value="18,9"/>
  <Setter Property="FontSize" Value="14"/>
  <Setter Property="FontWeight" Value="SemiBold"/>
  <Setter Property="Cursor" Value="Hand"/>
  <Setter Property="Template">
    <Setter.Value>
      <ControlTemplate TargetType="ToggleButton">
        <Border x:Name="Bd" CornerRadius="18"
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}">
          <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <ControlTemplate.Triggers>
          <Trigger Property="IsMouseOver" Value="True">
            <Setter TargetName="Bd" Property="Background" Value="{StaticResource Mist.Panel2}"/>
            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Mist.AccentDim}"/>
          </Trigger>
          <Trigger Property="IsChecked" Value="True">
            <Setter TargetName="Bd" Property="Background">
              <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                  <GradientStop Color="#2AA7B1" Offset="0"/>
                  <GradientStop Color="#1B6D74" Offset="1"/>
                </LinearGradientBrush>
              </Setter.Value>
            </Setter>
            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Mist.Accent}"/>
            <Setter Property="Foreground" Value="White"/>
          </Trigger>
        </ControlTemplate.Triggers>
      </ControlTemplate>
    </Setter.Value>
  </Setter>
</Style>

<!-- ComboBox (dark) -->
<Style x:Key="Mist.ComboBox" TargetType="ComboBox">
  <Setter Property="Foreground" Value="#0B1416"/>
  <Setter Property="Background" Value="#E6F2F1"/>
  <Setter Property="BorderBrush" Value="{StaticResource Mist.Border}"/>
  <Setter Property="BorderThickness" Value="1"/>
  <Setter Property="Padding" Value="10,6"/>
  <Setter Property="Template">
    <Setter.Value>
      <ControlTemplate TargetType="ComboBox">
        <Grid>
          <ToggleButton x:Name="ToggleButton"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Focusable="False"
                        IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                        ClickMode="Press">
            <ToggleButton.Template>
              <ControlTemplate TargetType="ToggleButton">
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="6">
                  <Grid>
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition/>
                      <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Path Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                          Data="M 0 0 L 4 4 L 8 0 Z" Fill="#0B1416"/>
                  </Grid>
                </Border>
              </ControlTemplate>
            </ToggleButton.Template>
          </ToggleButton>
          <ContentPresenter x:Name="ContentSite"
                           IsHitTestVisible="False"
                           Content="{TemplateBinding SelectionBoxItem}"
                           ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                           Margin="10,6,30,6"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">
            <ContentPresenter.Resources>
              <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="#0B1416"/>
              </Style>
            </ContentPresenter.Resources>
          </ContentPresenter>
          <Popup x:Name="Popup"
                 Placement="Bottom"
                 IsOpen="{TemplateBinding IsDropDownOpen}"
                 AllowsTransparency="True"
                 Focusable="False"
                 PopupAnimation="Slide">
            <Border Background="#E6F2F1" BorderBrush="{StaticResource Mist.Border}" BorderThickness="1" CornerRadius="6" Margin="0,2,0,0">
              <ScrollViewer MaxHeight="300">
                <ItemsPresenter/>
              </ScrollViewer>
            </Border>
          </Popup>
        </Grid>
      </ControlTemplate>
    </Setter.Value>
  </Setter>
  <Setter Property="ItemContainerStyle">
    <Setter.Value>
      <Style TargetType="ComboBoxItem">
        <Setter Property="Foreground" Value="#0B1416"/>
        <Setter Property="Background" Value="#E6F2F1"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="ComboBoxItem">
              <Border x:Name="Bd" 
                      Background="{TemplateBinding Background}"
                      BorderThickness="0"
                      Padding="{TemplateBinding Padding}">
                <ContentPresenter>
                  <ContentPresenter.Resources>
                    <Style TargetType="TextBlock">
                      <Setter Property="Foreground" Value="#0B1416"/>
                    </Style>
                  </ContentPresenter.Resources>
                </ContentPresenter>
              </Border>
              <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                  <Setter TargetName="Bd" Property="Background" Value="#6FE3D6"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                  <Setter TargetName="Bd" Property="Background" Value="#1FA9A4"/>
                  <Setter Property="Foreground" Value="White"/>
                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
    </Setter.Value>
  </Setter>
</Style>

<Style x:Key="Mist.NavButton" TargetType="Button">
    <Setter Property="Foreground" Value="{StaticResource Mist.Text}"/>
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderBrush" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="18,9"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border x:Name="Bd"
                  Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  CornerRadius="18">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter TargetName="Bd" Property="Background" Value="{StaticResource Mist.Panel2}"/>
              <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Mist.Border}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter TargetName="Bd" Property="Background" Value="{StaticResource Mist.Panel}"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="Mist.PrimaryButton" TargetType="Button">
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="Background" Value="{StaticResource Mist.Accent}"/>
    <Setter Property="BorderBrush" Value="{StaticResource Mist.Accent}"/>
    <Setter Property="BorderThickness" Value="2"/>
    <Setter Property="Padding" Value="24,12"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border x:Name="Bd" CornerRadius="20"
                  Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  Padding="{TemplateBinding Padding}">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter TargetName="Bd" Property="Background" Value="{StaticResource Mist.Teal}"/>
              <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Mist.Teal}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter TargetName="Bd" Property="Background" Value="{StaticResource Mist.AccentDim}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter TargetName="Bd" Property="Opacity" Value="0.5"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="Mist.SecondaryButton" TargetType="Button">
    <Setter Property="Foreground" Value="{StaticResource Mist.Text}"/>
    <Setter Property="Background" Value="{StaticResource Mist.Panel2}"/>
    <Setter Property="BorderBrush" Value="{StaticResource Mist.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="16,10"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border x:Name="Bd" CornerRadius="18"
                  Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  Padding="{TemplateBinding Padding}">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter TargetName="Bd" Property="Background" Value="{StaticResource Mist.Panel}"/>
              <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Mist.Accent}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter TargetName="Bd" Property="Background" Value="{StaticResource Mist.Background}"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="Mist.Card" TargetType="Border">
    <Setter Property="Background" Value="{StaticResource Mist.Panel}"/>
    <Setter Property="BorderBrush" Value="{StaticResource Mist.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="18"/>
    <Setter Property="Padding" Value="16"/>
  </Style>

  <Style x:Key="Mist.TextBox" TargetType="TextBox">
    <Setter Property="Background" Value="{StaticResource Mist.Panel2}"/>
    <Setter Property="BorderBrush" Value="{StaticResource Mist.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Foreground" Value="{StaticResource Mist.Text}"/>
    <Setter Property="Padding" Value="10,8"/>
  </Style>

  <Style x:Key="Mist.PasswordBox" TargetType="PasswordBox">
    <Setter Property="Background" Value="{StaticResource Mist.Panel2}"/>
    <Setter Property="BorderBrush" Value="{StaticResource Mist.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Foreground" Value="{StaticResource Mist.Text}"/>
    <Setter Property="Padding" Value="10,8"/>
  </Style>
</ResourceDictionary>